# サーバー設定
PORT=3000
NODE_ENV=development

# JWT設定
JWT_SECRET=your-secret-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# セッション設定
SESSION_SECRET=your-session-secret-change-this-in-production

# メール設定（Gmail使用例）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# メール送信者情報
EMAIL_FROM=給料明細システム <your-email@gmail.com>

# フロントエンドURL
FRONTEND_URL=http://localhost:8000

# データベース設定（RESTful Table API）
API_BASE_URL=http://localhost:3000/tables

# 管理者アカウント（初期設定）
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123456

# セキュリティ設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# PDF生成設定
PDF_TEMP_DIR=/tmp/payslips
